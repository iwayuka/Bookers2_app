<!-- Bootstrapでレイアウトを整える -->
<div class="container px-5 px-sm-0">
  <div class="row">

    <!-- 部分テンプレートの挿入 -->
    <%= render 'layouts/list', books:@books, book:@book, user:@user %>
    <!-- 以上 -->

    <!-- ユーザー情報一覧出力用のテーブルを作成 -->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody><!-- ユーザー情報の一覧の出力 -->
          <% @users.each do |user| %>
            <tr>
              <td><!-- ユーザーの画像の挿入 -->
              <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40"%>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- 以上 -->
    
  </div>
</div>

