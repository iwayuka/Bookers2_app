<main>
  <p><!-- フラッシュメッセージの挿入 --></p>
  <!-- Bootstrapでレイアウトを整える -->
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <!-- 編集画面の記述-->
        <h2>User info</h2>

        <!-- form_withの記述 -->
        <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
        <input value="{}" data-reference="993d110b5dffcabe4f4e6580cb3e5981" type="hidden" name="user[profile_image]"><input class="form-control-file user_image" data-reference="993d110b5dffcabe4f4e6580cb3e5981" include_hidden="false" type="file" name="user[profile_image]" id="user_profile_image">
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
  <%= f.submit "変更を保存" %><% end %>
      </div>
</form>  </div>
</div>

      </div></main>
      
      <h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>  <%= f.submit "変更を保存" %>
<% end %>