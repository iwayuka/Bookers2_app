<!-- Bootstrapでレイアウトを整える -->
<div class="container px-5 px-sm-0">
  <div class="row">

    <!-- 部分テンプレートの挿入 -->
    <%= render 'layouts/list', books:@books, book:@book, user:@user %>
    <!-- 以上 -->

    <!-- ユーザー別、Book投稿一覧の表示 -->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id), method: :get do %><!-- iconをクリックするとuser詳細画面に遷移 -->
                  <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %><!-- book詳細画面に遷移 --></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          <!-- 以上 -->

        </tbody>
      </table>
    </div>
  </div>
</div>

