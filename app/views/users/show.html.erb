<main>
  <p><!-- フラッシュメッセージの挿入 --></p>
  <!-- Bootstrapでレイアウトを整える -->
  <div class="container px-5 px-sm-0">
    <div class="row">

      <!-- 部分テンプレートの挿入 -->
      <%= render 'layouts/list', books:@books, book:@book, user:@user %>

      <!-- ユーザー別、Book投稿一覧の表示 -->
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><!-- ユーザー画像 --></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
            <%= paginate @books %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
