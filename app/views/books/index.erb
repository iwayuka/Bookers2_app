<main>
  <p><!-- フラッシュメッセージの挿入 --></p>

  <!-- 部分テンプレートの挿入 -->
  <%= render 'books/list', books:@books, book:@book, user:@user %>

      <!-- Book投稿一覧を表示 -->

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
             <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
             </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><!-- ユーザーの画像の挿入かつユーザー情報へのリンク -->
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>