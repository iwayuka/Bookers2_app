<!-- 部分テンプレートの設定 -->

<div class="col-md-3">
  <!-- Current User情報の表示 -->
  <h2>User info</h2>
  <!-- urrent User画像の挿入 -->
  <table class="table">
    <tbody>
      <tr><%= attachment_image_tag user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg" %></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <!-- User情報の編集ボタン -->
  <div class="row">

    <% if user == current_user %>
      <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block", method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% else %>
      <%= link_to user_path(current_user.id), class:"btn btn-outline-secondary btn-block", method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>
  </div>

  <!-- Bookの新規投稿の作成 -->
  <h2 class="mt-3">New book</h2>

  <!-- form_with部分 -->
  <%= form_with model:book, local:true do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Book", class:"btn btn-success" %>
    </div>
  <% end %>
</div>